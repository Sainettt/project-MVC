<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe List</title>
    <link rel="stylesheet" type="text/css" href="css/style.css">
</head>
<body>
    <h1>Recipe List</h1>
    <ul>
        <% recipes.forEach((recipe, index) => { %>
            <li>
                <%= recipe.name %>
                <a href="/recipes/<%= index %>/edit" class="buttons edit-button">Edit</a>
                <form action="/recipes/<%= index %>/delete" method="POST" style="display: inline;">
                    <button class="buttons delete-button">Delete</button>
                </form>
            </li>
        <% }); %>
    </ul>
    <form action="/recipes" method="POST">
        <input type="text" name="name" placeholder="Recipe name" required>
        <input type="text" name="ingredients" placeholder="Ingredients (comma-separated)" required>
        <textarea name="instructions" placeholder="Instructions" required></textarea>
        <button class="buttons add-button">Add Recipe</button>
    </form>
</body>
</html>
